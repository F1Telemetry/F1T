<Window x:Class="F1T.MVVM.Views.OverlayContainer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:F1T.MVVM.Views"
        mc:Ignorable="d"
        Title="OverlayContainer" AllowsTransparency="True" Background="Transparent" WindowStyle="None">
    <Viewbox>
        <ContentControl Content="{Binding CurrentOverlay}">
        </ContentControl>
    </Viewbox>
</Window>
